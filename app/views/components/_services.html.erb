<!-- Sección Servicios -->
<div class="container">
  <h2 class="text-center mb-4">Nuestros Servicios</h2>

  <div class="row">
    <!-- Servicio Integral -->
    <div class="col-lg-12 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Desarrollo Personalizado</h5>
          <p class="card-text">Desarrollamos soluciones personalizadas para tu negocio.</p>
          <%= link_to "Más información", custom_development_path %>
        </div>
      </div>
    </div>
  </div>

  <h3 class="text-center mb-4">Subservicios</h3>

  <div class="row">
    <!-- Subservicio 1: Identidad Visual -->
    <div class="col-lg-3 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Identidad Visual</h5>
          <p class="card-text">Creamos logotipos, paletas de colores y tipografías personalizadas para tu marca.</p>
          <%= link_to "Más información", visual_identity_path %>
        </div>
      </div>
    </div>

    <!-- Subservicio 2: Desarrollo de Funcionalidades (eliminado) -->
    <!-- Reemplazado por Marketing Digital -->
    <div class="col-lg-3 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Marketing Digital</h5>
          <p class="card-text">Estrategias de marketing para aumentar tu presencia en línea.</p>
          <%= link_to "Más información", digital_marketing_path %>
        </div>
      </div>
    </div>

    <!-- Subservicio 3: Optimización SEO -->
    <div class="col-lg-3 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Optimización SEO</h5>
          <p class="card-text">Mejora la visibilidad de tu sitio web en los motores de búsqueda.</p>
          <%= link_to "Más información", seo_optimization_path %>
        </div>
      </div>
    </div>

    <!-- Subservicio 4: Mantenimiento y Actualización -->
    <div class="col-lg-3 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Mantenimiento y Actualización</h5>
          <p class="card-text">Mantenemos tu sitio web actualizado y seguro.</p>
          <%= link_to "Más información", maintenance_update_path %>
        </div>
      </div>
    </div>
  </div>
</div>
